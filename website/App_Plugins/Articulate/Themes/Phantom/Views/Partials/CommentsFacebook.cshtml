@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@model global::Articulate.Models.PostModel

@*Facebook comments aren't responsive. Use at your own risk.*@

<div id="fb-root"></div>
<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<div class="fb-comments" data-href="@Model.Url(mode: UrlMode.Absolute)" data-numposts="5" data-colorscheme="light"></div>
